{
  "extends": "../tsconfig.dev.json",
  "exclude": [],
  "include": [
    "**/*.js",
    "**/*.jsx",
    "**/*.mjs",
    "**/*.cjs",
    "**/*.ts",
    "**/*.tsx",
    "../src/**/*.ts",
    "../src/**/*.tsx",
    "next.config.mjs",
    ".next/types/**/*.ts"
  ],
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "@/*": ["app/*"],
      "@payload-config": ["./payload.config.ts"],
      "@retailos-ai/cms-theme-global": ["../src/index.ts"],
      "@retailos-ai/cms-theme-global/client": ["../src/exports/client.ts"],
      "@retailos-ai/cms-theme-global/rsc": ["../src/exports/rsc.ts"],
      "@retailos-ai/cms-theme-global/styles": ["../src/styles/globalTheme.css"]
    },
    "noEmit": true,
    "emitDeclarationOnly": false
  }
}
